<Window x:Class="POSSystemNIS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POSSystemNIS"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="143*"/>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="77*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="98*"/>
            <RowDefinition Height="74*"/>
            <RowDefinition Height="122*"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Horizontal" Margin="5,5,5.8,4.6" Grid.RowSpan="2" Grid.ColumnSpan="2" Background="#FFDDDDDD" Grid.Row="0">

            <Grid Width="72" Margin="0,0,0,48">
                <Button Content="" HorizontalAlignment="Left" Height="64" Grid.RowSpan="2" VerticalAlignment="Top" Width="75" BorderBrush="Black" FontSize="24"/>
            <StackPanel Orientation="Vertical">
                <Label Foreground="White" FontSize="18"  FontWeight="Bold">1</Label>
                <Label Foreground="Black" FontSize="10" Background="{x:Null}" HorizontalAlignment="Right">normal</Label>
                <Label Foreground="Red" FontSize="12" Background="White" HorizontalAlignment="Right">NEMA VEZU</Label>
                </StackPanel>
            </Grid>

        </StackPanel>

        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Horizontal" Margin="4.2,5,5.4,4.6" Grid.RowSpan="2" Background="#FFDDDDDD" Grid.Row="0" Grid.Column="2"/>


        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Horizontal" Margin="5,5.4,1.4,4.8" Grid.RowSpan="2" Grid.ColumnSpan="1" Background="#FFDDDDDD" Grid.Row="2"/>

        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Horizontal" Margin="8.6,5.4,5.4,5.2" Grid.RowSpan="1" Grid.ColumnSpan="2" Background="#FFDDDDDD" Grid.Row="2" Grid.Column="1"/>

        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Orientation="Horizontal" Margin="8.6,4.8,5.4,4.8" Grid.ColumnSpan="2" Background="#FFDDDDDD" Grid.Row="3" Grid.Column="1">
        </StackPanel>
       


    </Grid>
</Window>
